<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="pokemon.NewPlayerPage"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome new Player!"
                HorizontalOptions="Center" />
            <Label Text="Name:"/>
            <Entry x:Name="Namebox" Placeholder="Type Name here"/>
            <Label Text="Gender:"/>
            <Button Text="Male" x:Name="MaleBtn" Clicked="MaleBtn_Clicked"/>
            <Button Text="Female" x:Name="FemBtn" Clicked="FemBtn_Clicked"/>
            <Label Text="Avatar"/>
            <Image HorizontalOptions="Center" HeightRequest="150" WidthRequest="150"
                   x:Name="ImageBox"/>
            <Button Text="Previous" x:Name="PrevBtn" Clicked="PrevBtn_Clicked"/>
            <Button Text="Next" x:Name="NextBtn" Clicked="NextBtn_Clicked"/>
            <Button Text="Save" x:Name="SaveBtn" Clicked="SaveBtn_Clicked"/>
            <Button Text="Cancel" x:Name="CancelBtn" Clicked="CancelBtn_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>