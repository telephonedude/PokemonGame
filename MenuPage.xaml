<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="pokemon.MenuPage"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout>
            <Button x:Name="leagueBtn" Text="League Battle"/>
            <Button x:Name="trainBtn" Clicked="TrainBtn_Clicked" Text="Training"/>
            <Button x:Name="pokedexBtn" Text="Pokedex" Clicked="PokedexBtn_Clicked"/>
            <Button x:Name="helpBtn" Clicked="HelpBtn_Clicked" Text="Help"/>
            <Button x:Name="aboutBtn" Clicked="AboutBtn_Clicked" Text="About"/>
            <Button x:Name="exitBtn" Clicked="ExitBtn_Clicked" Text="Exit"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>